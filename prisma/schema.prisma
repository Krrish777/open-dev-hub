generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model users {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  image     String
  skills    String[]
  twitter   String?
  github    String?
  linkedin  String?
  portfolio String?
  project   projects[]
}

model projects {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  status      Boolean
  repoLink    String
  tags        String[]
  userId      String   @db.ObjectId
  user        users    @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
